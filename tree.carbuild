#!/bin/bash

version=1.7.0
src_dir=${PACKAGE_BUILD_DIR}/${PACKAGE_NAME}-${version}
cd ${PACKAGE_BUILD_DIR}

# extract
tar xf ${PACKAGES_DIR}/archives/${PACKAGE_NAME}/${PACKAGE_NAME}-${version}.tgz
cd ${src_dir}

# do build
cd ${src_dir}
make -j8

# install in final
mkdir -p ${FINAL_DIR}/usr/bin/
cp tree ${FINAL_DIR}/usr/bin/
