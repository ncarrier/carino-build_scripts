#!/bin/bash

version=4.9
src_dir=${PACKAGE_BUILD_DIR}/${PACKAGE_NAME}-${version}
cd ${PACKAGE_BUILD_DIR}

# extract
tar xf ${PACKAGES_DIR}/archives/${PACKAGE_NAME}/${PACKAGE_NAME}-${version}.tar.xz
cd ${src_dir}

# configure
./configure --prefix=${STAGING_DIR} --host=${TOOLCHAIN_PREFIX} \
	--config-cache

# do build
make -j8

cp strace ${FINAL_DIR}/usr/bin/

