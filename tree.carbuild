#!/bin/bash

package_name=tree

build_dir=${BUILD_DIR}/${package_name}
src_dir=${build_dir}/tree-1.7.0
mkdir -p ${build_dir}
cd ${build_dir}

# extract
tar xf ${PACKAGES_DIR}/archives/${package_name}/tree-1.7.0.tgz

# do build
cd ${src_dir}
make CC=${TOOLCHAIN_PREFIX}-gcc

cp tree ${FINAL_DIR}/usr/bin/

